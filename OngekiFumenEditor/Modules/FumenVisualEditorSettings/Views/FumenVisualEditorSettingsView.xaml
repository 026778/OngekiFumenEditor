<UserControl
    x:Class="OngekiFumenEditor.Modules.FumenVisualEditorSettings.Views.FumenVisualEditorSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://caliburnmicro.com"
    xmlns:converters="clr-namespace:OngekiFumenEditor.Modules.FumenVisualEditor.Converters"
    xmlns:converters1="clr-namespace:OngekiFumenEditor.UI.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gemini="http://schemas.timjones.io/gemini"
    xmlns:local="clr-namespace:OngekiFumenEditor.Modules.FumenVisualEditorSettings.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=local:FumenVisualEditorSettingsViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:UnitCloseSizeConverter x:Key="UnitCloseSizeConverter">
        </converters:UnitCloseSizeConverter>
        <converters1:NullToVisibilityConverter x:Key="NullToVisibilityConverter">
        </converters1:NullToVisibilityConverter>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10,5,10,5" Visibility="{Binding Setting, Converter={StaticResource NullToVisibilityConverter}}">
            <CheckBox
                Margin="0,2,0,2"
                Content="禁止时间轴自动停靠"
                IsChecked="{Binding Setting.DisableTGridMagneticDock}">
            </CheckBox>
            <CheckBox
                Margin="0,2,0,2"
                Content="强制水平位置轴自动停靠"
                IsChecked="{Binding Setting.ForceXGridMagneticDock}">
            </CheckBox>
            <CheckBox
                Margin="0,2,0,2"
                Content="禁止水平位置轴自动停靠"
                IsChecked="{Binding Setting.DisableXGridMagneticDock}">
            </CheckBox>
            <CheckBox
                Margin="0,2,0,2"
                Content="强制Tap或Hold物件停靠到轨道上"
                IsChecked="{Binding Setting.ForceTapHoldMagneticDockToLane}">
            </CheckBox>
            <CheckBox
                Margin="0,2,0,2"
                Content="强制自动停靠"
                IsChecked="{Binding Setting.ForceMagneticDock}">
            </CheckBox>
            <Grid Margin="0,2,0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}">
                    水平辅助线间距
                </TextBlock>
                <ComboBox
                    Grid.Column="1"
                    ItemsSource="{Binding UnitCloseSizeValues}"
                    SelectedIndex="4"
                    SelectedValue="{Binding Setting.XGridUnitSpace}">
                </ComboBox>
                <TextBlock
                    Grid.Row="1"
                    Margin="0,5,0,5"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    ToolTip="The vertical base length within standard bpm 240">
                    水平轴缩放伸缩基准 *
                </TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,5,0,5"
                    Text="{Binding Setting.TGridUnitLength}">
                </TextBox>
                <TextBlock
                    Grid.Row="2"
                    Margin="0,0,0,5"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}">
                    倍化细分时间轴辅助线
                </TextBlock>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    Text="{Binding Setting.BeatSplit}">
                </TextBox>

                <TextBlock
                    Grid.Row="4"
                    Margin="0,0,0,5"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}"
                    TextWrapping="Wrap">
                    水平轴最大显示范围
                </TextBlock>
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text="{Binding Setting.XGridDisplayMaxUnit}">
                </TextBox>
                <TextBlock
                    Grid.Row="5"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}">
                    判定线偏移位置:<LineBreak>
                    </LineBreak><Run Text="{Binding Setting.JudgeLineOffsetY}">
                    </Run>
                </TextBlock>
                <Slider
                    Grid.Row="5"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Maximum="500"
                    Minimum="0"
                    Value="{Binding Setting.JudgeLineOffsetY, Mode=TwoWay}">
                </Slider>
                <TextBlock
                    Grid.Row="6"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Foreground="{DynamicResource EnvironmentToolWindowText}">
                    水平显示缩放:<LineBreak>
                    </LineBreak><Run Text="{Binding Setting.VerticalDisplayScale}">
                    </Run>
                </TextBlock>
                <gemini:SliderEx
                    Grid.Row="6"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    cal:Message.Attach="[Event ThumbDragCompleted] = [Action OnSliderValueChanged()];"
                    IsSnapToTickEnabled="True"
                    Maximum="3"
                    Minimum="0.1"
                    TickFrequency="0.1"
                    Value="{Binding Setting.VerticalDisplayScale, Mode=TwoWay}">
                </gemini:SliderEx>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
