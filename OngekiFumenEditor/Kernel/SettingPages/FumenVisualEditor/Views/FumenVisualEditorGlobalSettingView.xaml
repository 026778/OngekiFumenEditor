<UserControl
    x:Class="OngekiFumenEditor.Kernel.SettingPages.FumenVisualEditor.Views.FumenVisualEditorGlobalSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:OngekiFumenEditor.Properties"
    xmlns:vm="clr-namespace:OngekiFumenEditor.Kernel.SettingPages.FumenVisualEditor.ViewModels"
    d:Background="White"
    d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True,
                                     Type=vm:FumenVisualEditorGlobalSettingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <GroupBox Margin="5" Header="{x:Static res:Resources.AutoSave}">
            <StackPanel Margin="10">
                <CheckBox Content="{x:Static res:Resources.EnableAutoSave}" IsChecked="{Binding Setting.IsEnableAutoSave}" />
                <StackPanel
                    Margin="0,10,0,0"
                    IsEnabled="{Binding Setting.IsEnableAutoSave}"
                    Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.AutoSaveInterval}" />
                    <TextBox
                        Width="50"
                        Margin="5,0,5,0"
                        Text="{Binding Setting.AutoSaveTimeInterval}">
                    </TextBox>
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.TimesPerMin}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Margin="5" Header="{x:Static res:Resources.UndoRedo}">
            <StackPanel Margin="10">
                <CheckBox Content="{x:Static res:Resources.RememberUndoPlace}" IsChecked="{Binding Setting.RecoveryCurrentTimeAfterExecuteAction}" />
                <CheckBox
                    Margin="0,10,0,0"
                    Content="{x:Static res:Resources.LimitUndoCount}"
                    IsChecked="{Binding Setting.IsEnableUndoActionSavingLimit}" />
                <StackPanel
                    Margin="0,10,0,0"
                    IsEnabled="{Binding Setting.IsEnableUndoActionSavingLimit}"
                    Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.SaveMaxCount_Part1}" />
                    <TextBox
                        Width="50"
                        Margin="5,0,5,0"
                        Text="{Binding Setting.UndoActionSavingLimit}">
                    </TextBox>
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.SaveMaxCount_Part2}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Margin="5" Header="{x:Static res:Resources.UserInteraction}">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.EditorMouseWheelSpeed}" />
                    <TextBox
                        Width="50"
                        Margin="5,0,5,0"
                        Text="{Binding Setting.MouseWheelLength}">
                    </TextBox>
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.EditorMouseWheelSpeed_Unit}" />
                </StackPanel>
                <CheckBox
                    Margin="0,10,0,0"
                    Content="{x:Static res:Resources.EnableHorizonScroll}"
                    IsChecked="{Binding Setting.EnableXOffset}" />
                <CheckBox
                    Margin="0,10,0,0"
                    Content="{x:Static res:Resources.EnableHorizonScrollBarDisplay}"
                    IsChecked="{Binding Setting.ShowXOffsetScrollBar}"
                    IsEnabled="{Binding Setting.EnableXOffset}" />
            </StackPanel>
        </GroupBox>
        <GroupBox Margin="5" Header="{x:Static res:Resources.Render}">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.BellBulletCountOverLimit_Part1}" />
                    <TextBox
                        Width="50"
                        Margin="5,0,5,0"
                        Text="{Binding Setting.ParallelCountLimit}">
                    </TextBox>
                    <TextBlock VerticalAlignment="Center" Text="{x:Static res:Resources.BellBulletCountOverLimit_Part2}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Margin="5" Header="{x:Static res:Resources.Other}">
            <StackPanel Margin="10">
                <Button
                    Padding="10,5,10,5"
                    HorizontalAlignment="Left"
                    cal:Message.Attach="ClearRecentOpen()"
                    Content="{x:Static res:Resources.CleanRecentFilesRecords}" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
